<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android1:layout_gravity="center"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android1:clickable="true"
    android1:clipChildren="true"
    android1:gravity="center"
    android1:orientation="vertical"
    android1:scrollbars="horizontal"
    tools:context=".MainActivity" >

    <LinearLayout
        android1:id="@+id/linearLayout1"
        android1:layout_width="258dp"
        android1:layout_height="wrap_content"
        android1:background="#fff"
        android1:gravity="center_horizontal"
        android1:orientation="vertical" >

        <LinearLayout
            android1:layout_width="match_parent"
            android1:layout_height="wrap_content"
            android1:layout_marginLeft="10dp"
            android1:layout_marginRight="10dp"
            android1:layout_marginTop="10dp"
            android1:orientation="horizontal" >

            <TextView
                android1:id="@+id/textView1"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:layout_gravity="left"
                android1:text="登录Orient"
                android1:textSize="20sp" />

            <LinearLayout
                android1:layout_width="fill_parent"
                android1:layout_height="wrap_content"
                android1:layout_gravity="right"
                android1:orientation="vertical" >

                <TextView
                    android1:id="@+id/register"
                    android1:layout_width="wrap_content"
                    android1:layout_height="wrap_content"
                    android1:layout_gravity="right"
                    android1:layout_marginTop="10dp"
                    android1:clickable="true"
                    android1:text="注册账号"
                    android1:textColor="#6dabde" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android1:id="@+id/textView2"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:text="______________________________________"
            android1:textAppearance="?android:attr/textAppearanceSmall"
            android1:textColor="#ed9060" />

        <LinearLayout
            android1:layout_width="match_parent"
            android1:layout_height="wrap_content"
            android1:layout_margin="5dp"
            android1:orientation="vertical" >

            <EditText
                android1:id="@+id/username"
                android1:layout_width="match_parent"
                android1:layout_height="wrap_content"
                android1:ems="10"
                android1:hint="用户名"
                android1:inputType="textPersonName"
                android1:text="cscc@qq.com"
                android1:textSize="15sp" />

            <EditText
                android1:id="@+id/password"
                android1:layout_width="match_parent"
                android1:layout_height="wrap_content"
                android1:ems="10"
                android1:hint="密码"
                android1:inputType="textPassword"
                android1:text="asdasdasdas"
                android1:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_marginBottom="20dp" >

            <CheckBox
                android1:id="@+id/rememberpw"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:checked="true"
                android1:text="记住密码"
                android1:textColor="#5f5e5e" />

            <Button
                android1:id="@+id/loginbtn"
                style="?android:attr/buttonStyleSmall"
                android1:layout_width="80dp"
                android1:layout_height="30dp"
                android1:layout_gravity="bottom"
                android1:layout_marginLeft="70dp"
                android1:background="@drawable/color_background_login" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_below="@+id/linearLayout1"
        android1:layout_centerHorizontal="true"
        android1:layout_marginTop="12dp"
        android1:orientation="horizontal" >

        <TextView
            android1:id="@+id/textView3"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:text="忘记密码？"
            android1:textAppearance="?android:attr/textAppearanceLarge"
            android1:textSize="15sp" />

        <TextView
            android1:id="@+id/textView4"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:clickable="true"
            android1:text="点击这里"
            android1:textAppearance="?android:attr/textAppearanceLarge"
            android1:textColor="#497737"
            android1:textSize="15sp" />

    </LinearLayout>

</LinearLayout>
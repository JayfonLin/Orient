<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title2" >

        <TextView
            android:id="@+id/room_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/button1"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="维多利亚的宵夜"
            android:textColor="#fff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/back_home"
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:background="@drawable/home_button"
            android:textColor="#FFF" />

        <Button
            android:id="@+id/game_final_start"
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:layout_alignBottom="@+id/button1"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:background="@drawable/path_button" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EEEEEE"
            android:orientation="vertical"
            android:padding="10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/fillet_white"
                android:padding="10dp" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/team_one_pic"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:src="@drawable/red" />

                    <ImageView
                        android:id="@+id/team_one_join"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/teamcurrent" />
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#ccc" />

                <LinearLayout
                    android:id="@+id/LinearLayout02"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical" >

                    <ListView
                        android:id="@+id/team_one_listview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >
                    </ListView>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/fillet_white"
                android:padding="10dp" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/team_two_pic"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:src="@drawable/yellow" />

                    <ImageButton
                        android:id="@+id/team_two_join"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:src="@drawable/teamjoin" />
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#ccc" />

                <LinearLayout
                    android:id="@+id/LinearLayout01"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical" >

                    <ListView
                        android:id="@+id/team_two_listview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >
                    </ListView>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/fillet_white"
                android:padding="10dp" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/team_three_pic"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:src="@drawable/blue" />

                    <ImageButton
                        android:id="@+id/team_three_join"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:src="@drawable/teamjoin" />
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#ccc" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical" >

                    <ListView
                        android:id="@+id/team_three_listview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >
                    </ListView>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/fillet_white"
                android:padding="10dp" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/team_four_ppic"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:src="@drawable/green" />

                    <ImageButton
                        android:id="@+id/team_four_join"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:src="@drawable/teamjoin" />

                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#ccc" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical" >

                    <ListView
                        android:id="@+id/team_four_listview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >
                    </ListView>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>

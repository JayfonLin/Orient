<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/resultbackground"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title2" >

        <TextView
            android:id="@+id/game_final_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/misson_select_1"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="维多利亚的宵夜"
            android:textColor="#fff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/game_final_button1"
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:background="@drawable/button_exit"
            android:textColor="#FFF" />

        <Button
            android:id="@+id/game_final_button2"
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:layout_alignBottom="@+id/misson_select_1"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:background="@drawable/button_member" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_change" >

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="390dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/misson_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/goldenlogo" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="排行榜"
                    android:textColor="#000"
                    android:textSize="22sp" />
            </LinearLayout>
			
            <View
	            android:layout_width="fill_parent"
	            android:layout_height="1px"
	            android:background="#A0A0A0" >
	        </View>
            
            <LinearLayout
                android:layout_width="260dp"
                android:layout_height="300dp"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp" >

                    <ImageView
                        android:id="@+id/ImageView03"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/TextView07"
                        android:background="#00000000"
                        android:src="@drawable/red" />

                    <TextView
                        android:id="@+id/TextView07"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:text="1."
                        android:textColor="#000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/TextView09"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/TextView07"
                        android:layout_marginLeft="18dp"
                        android:layout_toRightOf="@+id/ImageView03"
                        android:text="KK的小屋"
                        android:textColor="#000"
                        android:textSize="15sp" />

                    <ImageButton
                        android:id="@+id/ImageButton03"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:background="#00000000"
                        android:src="@drawable/angel_up" />

                    <TextView
                        android:id="@+id/TextView08"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/TextView09"
                        android:layout_alignParentBottom="true"
                        android:text="2&apos;&apos;00&apos;&apos;30"
                        android:textColor="#0000FF"
                        android:textSize="12sp" />

                </RelativeLayout>
                
                <View
		            android:layout_width="fill_parent"
		            android:layout_height="1px"
		            android:background="#E2E1E1" >
		        </View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp" >

                    <ImageView
                        android:id="@+id/ImageView02"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/TextView04"
                        android:background="#00000000"
                        android:src="@drawable/green" />

                    <TextView
                        android:id="@+id/TextView04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:text="2."
                        android:textColor="#000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/TextView06"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/TextView04"
                        android:layout_marginLeft="18dp"
                        android:layout_toRightOf="@+id/ImageView02"
                        android:text="JJ的小屋"
                        android:textColor="#000"
                        android:textSize="15sp" />

                    <ImageButton
                        android:id="@+id/ImageButton02"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:background="#00000000"
                        android:src="@drawable/angel_up" />

                    <TextView
                        android:id="@+id/TextView05"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/TextView04"
                        android:layout_alignBottom="@+id/TextView04"
                        android:layout_alignLeft="@+id/TextView06"
                        android:text="2&apos;&apos;05&apos;&apos;30"
                        android:textColor="#0000FF"
                        android:textSize="12sp" />

                </RelativeLayout>
				
                <View
		            android:layout_width="fill_parent"
		            android:layout_height="1px"
		            android:background="#E2E1E1" >
		        </View>
		        
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp" >

                    <ImageView
                        android:id="@+id/ImageView01"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/TextView01"
                        android:background="#00000000"
                        android:src="@drawable/blue" />

                    <TextView
                        android:id="@+id/TextView01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:text="3."
                        android:textColor="#000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/TextView03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/TextView01"
                        android:layout_marginLeft="18dp"
                        android:layout_toRightOf="@+id/ImageView01"
                        android:text="DD的小屋"
                        android:textColor="#000"
                        android:textSize="15sp" />

                    <ImageButton
                        android:id="@+id/ImageButton01"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:background="#00000000"
                        android:src="@drawable/angel_up" />

                    <TextView
                        android:id="@+id/TextView02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/TextView01"
                        android:layout_alignBottom="@+id/TextView01"
                        android:layout_alignLeft="@+id/TextView03"
                        android:text="2&apos;&apos;05&apos;&apos;30"
                        android:textColor="#0000FF"
                        android:textSize="12sp" />

                </RelativeLayout>
				
                <View
		            android:layout_width="fill_parent"
		            android:layout_height="1px"
		            android:background="#E2E1E1" >
		        </View>
                
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp" >

                    <ImageView
                        android:id="@+id/Next"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/textView2"
                        android:background="#00000000"
                        android:src="@drawable/yellow" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:text="4."
                        android:textColor="#000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/textView2"
                        android:layout_marginLeft="18dp"
                        android:layout_toRightOf="@+id/Next"
                        android:text="KK的小屋"
                        android:textColor="#000"
                        android:textSize="15sp" />

                    <ImageButton
                        android:id="@+id/Final_invite"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:background="#00000000"
                        android:src="@drawable/angel_up" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/textView3"
                        android:layout_alignParentBottom="true"
                        android:text="2&apos;&apos;20&apos;&apos;30"
                        android:textColor="#0000FF"
                        android:textSize="12sp" />

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:src="@drawable/green_back" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/green_share" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="400dp"
    android:background="#2D2D2D" >
	<RelativeLayout
	    android:layout_width="wrap_content"
	    android:layout_height="400dp"
	    android:background="@drawable/mission_background"
	    android:orientation="vertical" >
	
	    <ImageButton
	        android:id="@+id/misson_button"
	        android:layout_width="90dp"
	        android:layout_height="30dp"
	        android:layout_alignParentBottom="true"
	        android:layout_centerHorizontal="true"
	        android:layout_marginBottom="20dp"
	        android:layout_marginTop="10dp"
	        android:src="@drawable/commitgreenbutton" />

	    <RadioGroup
	        android:id="@+id/radioGroup1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_above="@+id/misson_button"
	        android:layout_centerHorizontal="true"
	        android:orientation="vertical" >

	        <RadioButton
	            android:id="@+id/button_1"
	            android:layout_width="250dp"
	            android:layout_height="wrap_content"
	            android:background="@drawable/color_background"
	            android:button="@null"
	            android:text=" A . 詹姆斯·邦德"
	            android:textColor="#3D3D3D" />

	        <RadioButton
	            android:id="@+id/button_2"
	            android:layout_width="250dp"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="2dp"
	            android:background="@drawable/color_background"
	            android:button="@null"
	            android:text=" B . 迈克尔·杰克逊"
	            android:textColor="#3D3D3D" />

	        <RadioButton
	            android:id="@+id/button_3"
	            android:layout_width="250dp"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="2dp"
	            android:background="@drawable/color_background"
	            android:button="@null"
	            android:text=" C . 列奥纳多·达·芬奇"
	            android:textColor="#3D3D3D" />

	        <RadioButton
	            android:id="@+id/button_4"
	            android:layout_width="250dp"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="2dp"
	            android:background="@drawable/color_background"
	            android:button="@null"
	            android:text=" D . 大卫·科波菲特"
	            android:textColor="#3D3D3D" />
	    </RadioGroup>

	    <TextView
	        android:id="@+id/textView2"
	        android:layout_width="220dp"
	        android:layout_height="wrap_content"
	        android:layout_above="@+id/radioGroup1"
	        android:layout_centerHorizontal="true"
	        android:layout_marginBottom="74dp"
	        android:text="007系列电影中，特工男主角的名\n字叫什么?"
	        android:textColor="#3D3D3D" />
	
	</RelativeLayout>
</LinearLayout>